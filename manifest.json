{
    "manifest_version": 2,
    "name": "Banana",
    "description": "More accurately track code snippets in GitHub PR diffs.",
    "version": "0.0.1",
    "icons": {
        "128": "icons/128x128.png"
    },
    "browser_action": {
        "default_icon": {
            "32": "icons/32x32.png",
            "64": "icons/64x64.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://*/*/pull/*/files",
                        "https://*/*/*/pull/*/files"],
            "js": ["jquery-1.9.1.min.js", "banana.js"],
            "css": ["banana.css"]
        }
    ],
    "web_accessible_resources": [
        "jquery-1.9.1.min.js"
    ]
}
